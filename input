pipeline {
    agent any

    environment {
        APP_NAME = "SampleApp"
        VERSION = "1.0"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                sh 'scp target/*.jar user@server:/opt/app/'
            }
        }
    }

    post {
        success {
            echo "Build and Deployment successful!"
        }
        failure {
            echo "Build failed. Please check logs."
        }
    }
}