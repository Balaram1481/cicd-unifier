pipeline {
    agent any

    environment {
        BUILD_ENV = "production"
        APP_NAME = "unifier-app"
    }

    options {
        timeout(time: 20, unit: 'MINUTES')
        timestamps()
    }

    stages {
        stage('Preparation') {
            steps {
                echo "Checking out code..."
                checkout scm
            }
        }

        stage('Build Matrix') {
            matrix {
                axes {
                    axis {
                        name 'PLATFORM'
                        values 'linux', 'windows'
                    }
                    axis {
                        name 'PYTHON_VERSION'
                        values '3.8', '3.9'
                    }
                }
                stages {
                    stage('Build') {
                        steps {
                            sh 'echo Building on ${PLATFORM} with Python ${PYTHON_VERSION}'
                        }
                    }
                    stage('Test') {
                        steps {
                            sh 'pytest tests/ --maxfail=1 --disable-warnings -q'
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying ${APP_NAME} to ${BUILD_ENV}"
                sh 'scp target/app.jar user@server:/opt/apps/'
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed, sending notification...'
        }
    }
}